<assembly>
	<id>project</id>
	<formats>
		<format>tar.bz2</format>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>.</directory>
			<outputDirectory>projects</outputDirectory>
			<useDefaultExcludes>true</useDefaultExcludes>
			<excludes>
				<exclude>**/target/**</exclude>
				<exclude>**/incubating/**</exclude>
				<exclude>**/bin/**</exclude>
			</excludes>
		</fileSet>
	</fileSets>
	<moduleSets>
		<moduleSet>
			<includeSubModules>false</includeSubModules>
			<binaries>
				<includeDependencies>false</includeDependencies>
				<outputDirectory>artifacts</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet>
			<includeSubModules>false</includeSubModules>
			<binaries>
				<attachmentClassifier>sources</attachmentClassifier>
				<includeDependencies>false</includeDependencies>
				<outputDirectory>artifacts</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
		<moduleSet>
			<includeSubModules>false</includeSubModules>
			<binaries>
				<attachmentClassifier>javadoc</attachmentClassifier>
				<includeDependencies>false</includeDependencies>
				<outputDirectory>artifacts</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
	</moduleSets>
	<dependencySets>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>io-tools/libs</outputDirectory>
		</dependencySet>
	</dependencySets>
</assembly>

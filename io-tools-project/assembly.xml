			</includes>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>artifacts</outputDirectory>
		</dependencySet>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>libs</outputDirectory>
		</dependencySet>
	</dependencySets>

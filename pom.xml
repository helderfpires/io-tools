<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>io-tools</artifactId>
  <packaging>pom</packaging>
  <name>io-tools</name>
  <description>IO-tools utilites for stream and format detection</description>
  <scm>
	<connection>scm:svn:http://io-tools.googlecode.com/svn/trunk</connection>
	<developerConnection>scm:svn:https://io-tools.googlecode.com/svn/trunk</developerConnection>
  </scm>
  <groupId>com.googlecode.io-tools</groupId>
  <version>1.0.6-SNAPSHOT</version>
  <modules>
    <module>wazformat</module>
    <module>easystream</module>
    <module>easystream-jdk14</module>
  </modules>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
	  <parallel>true</parallel>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
	<configuration>
          <preparationGoals>clean install</preparationGoals>
        </configuration>
      </plugin>
      <plugin>
	      <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-eclipse-plugin</artifactId>
              <configuration>
              	<wtpversion>2.0</wtpversion>
                <buildOutputDirectory>bin</buildOutputDirectory>
                <classpathContainers>
                	<classpathContainer>org.eclipse.jdt.launching.JRE_CONTAINER/org.eclipse.jdt.internal.debug.ui.launcher.StandardVMType/J2SE-1.4</classpathContainer>
                </classpathContainers>
                <downloadSources>true</downloadSources>
         </configuration>
      </plugin>
    </plugins>
  </build>
</project>
